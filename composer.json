{
    "name": "moharrum/utilities",
    "type": "library",
    "description": "A set of extra validation methods for the Laravel framework.",
    "keywords": [
        "Moharrum",
        "Utilities",
        "Laravel",
        "Validation",
        "alpha-num",
        "alpha-num-space",
        "max-words",
        "min-words"
    ],
    "homepage": "https://github.com/moharrum/utilities",
    "license": "MIT",
    "authors": [
        {
            "name": "Khalid Moharrum",
            "email": "khalid.moharram@gmail.com",
            "homepage": "http://moharrum.net",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Moharrum\\Utilities\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Moharrum\\Utilities\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
